<div class="hero-unit">
  <h2>All Credits</h2>
  <%- linkTo('Create a new Credit', addCreditPath, {class: 'btn pull-right'}); %>
</div>

<div id="credits-list">
<% if (credits) { %>
<% for (var i = 0, ii = credits.length; i < ii; i++) { %>
  <div class="row list-item" id="credit-<%= credits[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(credits[i].title, creditPath(credits[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= credits[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>