<div class="container-fluid" id="app">
  <div class="row-fluid">
    <div class="span2" id="entries">
      <ul class="nav nav-tabs nav-stacked items">
      </ul>
      <form id="entry-form">
        <input type="text" name="title" class="title input-medium" placeholder="Write Budget Name" />
      </form>
    </div>
    <div class="span10">
      <div id="entry-detail">
        <div class="no-result">No Budget Selected</div>
        <div class="result">
          <h3 class="title" contenteditable="true"></h3>
          <h4>Balance: <span class="balance-value"></span></h4>
          <div class="row-fluid">
            <div class="span5">
              <h5>Incomes</h5>
              <table class="table table-hover table-bordered" id="incomes-list">
                <thead>
                  <tr>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody class="items">

                </tbody>
                <tfoot>
                  <tr>
                    <td><strong>Total:</strong></td>
                    <td><strong class="total"></strong></td>
                    <td></td>
                  </tr>
                </tfoot>
              </table>
              <form class="form-inline" id="income-form">
                <input class="span6" type="text" name="title" class="title" placeholder="Description" />
                <input class="span3" type="text" name="value" class="value" placeholder="Amount" />
                <input type="hidden" name="_entryid" class="entryid" value="" />
                <button type="submit" class="btn">Add Income</button>
              </form>
            </div><!-- /span5 -->
            <div class="span5">
              <h5>Expenses</h5>
              <table class="table table-hover table-bordered" id="expenses-list">
                <thead>
                  <tr>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody class="items">

                </tbody>
                <tfoot>
                  <tr>
                    <td><strong>Total:</strong></td>
                    <td><strong class="total"></strong></td>
                    <td></td>
                  </tr>
                </tfoot>
              </table>
              <form class="form-inline" id="expense-form">
                <input class="span6" type="text" name="title" placeholder="Description" />
                <input class="span3" type="text" name="value" placeholder="Amount" />
                <input type="hidden" name="_entryid" class="entryid" value="" />
                <button type="submit" class="btn">Add Expense</button>
              </form>
            
            </div><!-- /span -->
          </div>
          <a href="#" class="btn btn-danger delete"><i class="icon-trash icon-white"></i> Delete Budget</a>
        </div>
      </div>
    </div>
  </div>
</div>
