<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Geddy App | This app uses Geddy.js</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width" />

    <!-- The HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <%- scriptLink('http://html5shim.googlecode.com/svn/trunk/html5.js', {type:'text/javascript'}) %>
    <![endif]-->


    <%- styleLink('/css/bootstrap.min.css', {rel:'stylesheet'}) %>
    <%- styleLink('/css/style.css', {rel:'stylesheet'}) %>
    <%- styleLink('/css/bootstrap.responsive.min.css', {rel:'stylesheet'}) %>

    <!-- The fav and touch icons -->
    <link rel="shortcut icon" href="/images/favicon.ico">
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="i-bar"><i class="icon-chevron-down icon-white"></i></span>
          </a>
          <%- linkTo('Budget.App', mainsPath, {class: 'brand'}) %>
        </div>
      </div>
    </div>
    <div class="container">
      <%- yield(); %>
    </div>

    <!-- templates -->
    <script type="text/x-handlebars-template" id="entry-tpl">
      <li><a href="#/entry/{{id}}" data-id="{{id}}" class="entry-item-link">{{title}}</a></li>
    </script>

    <script type="text/x-handlebars-template" id="entry-detail-tpl">
      <h3>{{title}}</h3>
      <p>Created: <small>{{createdAt}}</small></p>
    </script>

    <%- scriptLink('/js/jquery.min.js', {type:'text/javascript'}) %>
    <%- scriptLink('/js/bootstrap.min.js', {type:'text/javascript'}) %>
    <%- scriptLink('/js/config/init.js', {type: 'text/javascript'}) %>
    
    <%- scriptLink('/js/vendor/spine/spine.js', {type: 'text/javascript'}) %>
    <%- scriptLink('/js/vendor/spine/route.js', {type: 'text/javascript'}) %>
    <%- scriptLink('/js/vendor/spine/manager.js', {type: 'text/javascript'}) %>
    <%- scriptLink('/js/vendor/spine/ajax.js', {type: 'text/javascript'}) %>
    <%- scriptLink('/js/vendor/handlebars.js', {type: 'text/javascript'}) %>
    
    <%- scriptLink('/js/app.js', {type: 'text/javascript'}) %>
  </body>
</html>
